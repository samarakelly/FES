package Vieew;
import java.awt.Dimension;
import java.awt.FlowLayout;

import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class JanelaGenerica extends JFrame{

	private ImageIcon iiImagem;//imagem
	private JLabel lbImagem;//imagem label
	private JLabel logo;
	public JanelaGenerica(){

		setSize(400,333);
		setUndecorated(true);//Tira borda
		setLocationRelativeTo(null);
		setLayout(null);
		logo = new JLabel("SAU - Sistema de Acompanhamento Universitario");
		iiImagem = new ImageIcon(getClass().getResource("margem.png"));
		lbImagem = new JLabel(iiImagem);
		lbImagem.setBounds(0, 0,50,55);
		logo.setBounds(55, 0,280,55);
		add(lbImagem);
		add(logo);

		setVisible(true);
		
	}

	public static void main(String[] args) {
		new JanelaGenerica();
	}
}
